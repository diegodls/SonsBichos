<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5e9b9"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/logo" />

    <ImageView
        android:id="@+id/img_cao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/img_logo"
        android:layout_marginTop="95dp"
        app:srcCompat="@drawable/cao" />

    <ImageView
        android:id="@+id/img_gato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/img_logo"
        android:layout_alignTop="@+id/img_cao"
        app:srcCompat="@drawable/gato" />

    <ImageView
        android:id="@+id/img_leao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/img_logo"
        android:layout_marginBottom="193dp"
        app:srcCompat="@drawable/leao" />

    <ImageView
        android:id="@+id/img_macaco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/img_gato"
        android:layout_marginBottom="186dp"
        app:srcCompat="@drawable/macaco" />

    <ImageView
        android:id="@+id/img_ovelha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/img_logo"
        android:layout_alignTop="@+id/img_vaca"
        app:srcCompat="@drawable/ovelha" />

    <ImageView
        android:id="@+id/img_vaca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/img_gato"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="52dp"
        app:srcCompat="@drawable/vaca" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/direitos" />
</RelativeLayout>